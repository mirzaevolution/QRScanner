<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - QR Code Scanner</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("QR Code Scanner", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Scanner", "Index", "Home")</li>
                    <li><a href="https://www.the-qrcode-generator.com/" target="_blank">3rd Party QR Code Generator</a></li>

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        
        @RenderBody()
        <div></div>

        <footer class="footer">
            <p>&copy; @DateTime.Now.Year - QR Code Scanner</p>
            <p>Powered by: <a href="http://linkedin.com" target="_blank">Mirza Ghulam Rasyid</a></p>

        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/3rdParties")
    @RenderSection("scripts", required: false)
</body>
</html>
